if (eightBall === 0){
  console.log('Você não quer saber isso.');
} else if (eightBall === 1){
  console.log('Certamente.');
} else if (eightBall === 2){
  console.log('Perguntna sem sentido!');
} else if (eightBall === 3){
  console.log('Não posso prever isso!');
} else if (eightBall === 4){
  console.log('Não conte isso a ninguém!');
} else if (eightBall === 5){
  console.log('Minha busca indica que não!');
} else if (eightBall === 6){
  console.log('Não tenho notícias boas!');
} else {
  console.log('Há sinais que sim!');
}
