let userName = 'Paulo';
userName ? console.log(`Hello, ${userName}!`) : console.log('Hello!');
let userQuestion = 'Serei rico?';
userName ? console.log(`${userName}, sua pergunta é esta: ${userQuestion}`) : console.log(`Sua pergutna é esta: ${userQuestion}`);
let randomNumber = Math.floor(Math.random() * 8);
let eightBall = '';
eightBall = randomNumber;
